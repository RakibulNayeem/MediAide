    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/doctorProfileImageToUIvId"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/doctor_2"
                        app:civ_border_color="#000000"
                        app:civ_border_width="2dp" />
                </LinearLayout>



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/nameProTvId"
                            android:text="Name"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            />

                    </LinearLayout>



                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/degreeProTvId"
                            android:text="degree"
                            android:textColor="@color/deep_green"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/specialityProTvId"
                            android:text="@string/specialist"
                            android:textColor="#DD655C"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/hospitalProTvId"
                            android:text="Hospital"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="Training/Courses : PGT(Internal Medicine), CCD(Endocrinology) "
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="12dp"
                        android:text="Select area : General Physician, Covid Unit, Internal Medicine, Surgeon"
                        android:textColor="@color/deep_green"
                        android:textSize="14sp"
                        android:textStyle="normal" />


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:weightSum="12"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:layout_height="match_parent">

                        <TextView
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Experience"
                            android:textSize="12sp"
                            />
                        <TextView
                            android:paddingTop="5dp"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2+ years"
                            android:textColor="@color/black"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:background="@color/deep_green"
                        android:layout_width="1dp"
                        android:layout_height="match_parent">

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:layout_height="match_parent">

                        <TextView
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="BMDC Number"
                            android:textSize="12sp"
                            />
                        <TextView
                            android:paddingTop="5dp"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="123456"
                            android:textColor="@color/black"
                            />

                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Working in"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rajshahi Medical College Hospital(RMCH), Rajshahi"
                        android:textColor="@color/black"
                        />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/doctorProfileTabId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabMode="fixed"
                    app:tabGravity="fill"/>

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/doctorProfileVPId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    />


            </LinearLayout>


            <LinearLayout
                android:background="@android:drawable/dialog_holo_light_frame"
                android:padding="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="Chamber : "
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:textSize="15sp"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/chamberAddressProTvId"
                        android:text=""
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="Open : "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/openTimeProTvId"
                        android:text=""
                        android:textColor="@color/black"
                        android:layout_marginRight="2dp"
                        android:textStyle="normal"
                        android:textSize="15sp"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ampmProTvId"
                        android:text=""
                        android:textColor="@color/black"
                        android:layout_marginRight="5dp"
                        android:textStyle="normal"
                        android:textSize="15sp"
                        />




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text=" to "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/closeTimeProTvId"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="5dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ampm2ProTvId"
                        android:text=""
                        android:textColor="@color/black"
                        android:layout_marginRight="3dp"
                        android:textStyle="normal"
                        android:textSize="15sp"
                        />


                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/black"
                        android:text="Active Days : "
                        android:textStyle="normal"
                        android:textSize="15sp"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/activeDayProTvId"
                        android:text=""
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:textSize="15sp"
                        />

                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/black"
                        android:text="@string/zilla_title"
                        android:textStyle="normal"
                        android:textSize="15sp"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/zillaProTvId"
                        android:text=""
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:textSize="15sp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/black"
                        android:text="@string/contact"
                        android:textStyle="normal"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/phoneNumberProTvId"
                        android:text=""
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:textSize="15sp"
                        />

                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/feeProTextId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/deep_green"
                        android:text="Fee : BDT "
                        android:textStyle="bold"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/feeProTvId"
                        android:text=""
                        android:textColor="@color/deep_green"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        />

                </LinearLayout>



            </LinearLayout>


            <LinearLayout

                android:layout_margin="5dp"
                android:padding="10dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/callProBtnId"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Call Now"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:background="@drawable/round_bg"
                    />


            </LinearLayout>




        </LinearLayout>

    </ScrollView>




</LinearLayout>