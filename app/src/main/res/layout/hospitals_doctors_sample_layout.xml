<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_marginBottom="1dp">


    <LinearLayout
        android:padding="7dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="75dp"
            android:layout_height="75dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/doctorProfileImageViewId"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/doctor_2"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/black"/>


        </LinearLayout>




        <LinearLayout
            android:layout_marginLeft="4dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameCardTvId"
                    android:text="Md Rakibul Hasan"
                    android:textColor="@color/deep_green"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    />

            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/degreeCardTvId"
                    android:text="MBBS, BCS Medicine"
                    android:textStyle="bold"
                    android:textColor="#DD655C"
                    android:textSize="14sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/specialityCardTvId"
                    android:text="Speciality"
                    android:textStyle="bold"
                    android:textColor="#DD655C"
                    android:textSize="14sp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="-2dp"
                android:layout_marginLeft="-4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_location_deep_green"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chamberAddressCardTvId"
                    android:text="kajla, RUET, Rajshahi"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/feeCardTextId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fee : BDT "
                    android:textStyle="bold"
                    android:textColor="@color/deep_green"
                    android:textSize="14sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/feeCardTvId"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/deep_green"
                    />

            </LinearLayout>


        </LinearLayout>




    </LinearLayout>


</androidx.cardview.widget.CardView>