<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Donor.BloodDonorProfile">


    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="#5F458E"
            >

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_marginTop="-60dp"
            android:layout_width="100dp"
            android:layout_height="100dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/profileImageViewId"
                android:padding="5dp"
                android:src="@drawable/user_icon"

                />

        </LinearLayout>


        <LinearLayout
            android:padding="15dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_margin="1dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="3dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blood group : "
                    android:textColor="@color/colorPrimary"
                    />

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bloodGTvId"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_margin="1dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donated : "
                    android:textColor="@color/deep_green"
                    android:textStyle="bold"
                    android:textSize="15sp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/donatedCardTvId"
                    android:text="10+ times"
                    android:textColor="@color/deep_green"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Availability : "
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    />

                <TextView
                    android:layout_marginRight="4dp"
                    android:paddingRight="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/availabilityTvId"
                    android:text="Available"
                    android:textColor="@color/deep_green"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:gravity="end"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_margin="1dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <!--call button-->
                    <ImageView
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_call_icon"
                        android:id="@+id/callDonorBtnId"
                        />

<!--                <TextView-->
<!--                    android:layout_marginLeft="3dp"-->
<!--                    android:textStyle="bold"-->
<!--                    android:textSize="17sp"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Contact : "-->
<!--                    android:textColor="#000000"-->
<!--                    />-->

                <TextView
                    android:layout_marginLeft="8dp"
                    android:textStyle="normal"
                    android:textSize="17sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/phoneNumberTvId"
                    android:textColor="@color/black"
                    />

            </LinearLayout>




            <LinearLayout
                android:layout_margin="3dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="1dp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Donation : "
                    android:textColor="@color/black"
                    />

                <TextView
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lastDonationDateTvId"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_margin="3dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="1dp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Area/Village : "
                    android:textColor="@color/black"

                    />

                <TextView
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/villageTvId"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

            <LinearLayout

                android:layout_margin="3dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="1dp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upazila/University : "
                    android:textColor="@color/black"

                    />

                <TextView

                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/upazilaTvId"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_margin="3dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="1dp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zilla : "
                    android:textColor="@color/black"
                    />

                <TextView
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/zillaTvId"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_margin="3dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="1dp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status : "
                    android:textColor="@color/black"
                    />

                <TextView
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/statusTvId"
                    />

            </LinearLayout>




        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:padding="10dp"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/smsBtnId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sms"
                android:textStyle="bold"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="@drawable/round_bg"
                />


            <Button
                android:id="@+id/callBtnId"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call"
                android:textStyle="bold"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="@drawable/round_bg"
                />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>