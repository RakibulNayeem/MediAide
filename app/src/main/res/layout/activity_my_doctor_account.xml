<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Doctor.MyDoctorAccount">


    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="#5F458E"
            >

        </LinearLayout>

        <RelativeLayout
            android:layout_marginBottom="15dp"
            android:layout_marginTop="-55dp"
            android:layout_width="100dp"
            android:layout_height="100dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/myDoctorProfileImageViewId"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/doctor_2"
                app:civ_border_width="2dp"
                app:civ_border_color="#000000"/>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/myDoctorCameraIconViewId"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/ic_photo_camera_black_24dp"
                app:civ_border_color="#000000"
                app:civ_border_width="2dp" />


        </RelativeLayout>




        <LinearLayout
            android:background="@android:drawable/dialog_holo_light_frame"
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameProTvId"
                    android:text="Name"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    />

            </LinearLayout>



            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/degreeProTvId"
                    android:text="degree"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    />

            </LinearLayout>


            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/specialityProTvId"
                    android:text="@string/specialist"
                    android:textColor="#DD655C"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Chamber : "
                    android:textColor="#000000"
                    android:textStyle="normal"
                    android:textSize="16sp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chamberAddressProTvId"
                    android:text=""
                    android:textStyle="normal"
                    android:textSize="16sp"
                    />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Open : "
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/openTimeProTvId"
                    android:text=""
                    android:textColor="#000000"
                    android:layout_marginRight="2dp"
                    android:textStyle="normal"
                    android:textSize="17sp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ampmProTvId"
                    android:text=""
                    android:textColor="#000000"
                    android:layout_marginRight="5dp"
                    android:textStyle="normal"
                    android:textSize="17sp"
                    />




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text=" to "
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/closeTimeProTvId"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textStyle="normal"
                    android:textSize="17sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ampm2ProTvId"
                    android:text=""
                    android:textColor="#000000"
                    android:layout_marginRight="3dp"
                    android:textStyle="normal"
                    android:textSize="17sp"
                    />


            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:text="Active Days : "
                    android:textStyle="normal"
                    android:textSize="17sp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/activeDayProTvId"
                    android:text=""
                    android:textStyle="normal"
                    android:textSize="17sp"
                    />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:text="Zilla : "
                    android:textStyle="normal"
                    android:textSize="17sp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/zillaProTvId"
                    android:text=""
                    android:textStyle="normal"
                    android:textSize="17sp"
                    />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:text="Contact : "
                    android:textStyle="normal"
                    android:textSize="17sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/phoneNumberProTvId"
                    android:text=""
                    android:textStyle="normal"
                    android:textSize="17sp"
                    />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:text="Fee : BDT "
                    android:textStyle="bold"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/feeProTvId"
                    android:text="00"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    />

            </LinearLayout>




        </LinearLayout>


        <LinearLayout

            android:layout_margin="5dp"
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/callProBtnId"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Call Now"
                android:textStyle="bold"
                android:textAllCaps="true"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="@drawable/round_bg"
                />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>