<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_marginBottom="1dp"
    android:padding="5dp">


    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="85dp"
            android:layout_height="85dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/doctorProfileImageViewId"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/doctor_2"
                app:civ_border_width="2dp"
                app:civ_border_color="#000000"/>


        </LinearLayout>




        <LinearLayout
            android:layout_marginLeft="4dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameCardTvId"
                    android:text="Md Rakibul Hasan"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />

            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/degreeCardTvId"
                    android:text="MBBS, BCS Medicine"
                    android:textStyle="normal"
                    android:textSize="17sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chamberAddressCardTvId"
                    android:text="Popular Diagnostic, Bogura"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/specialityCardTvId"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="#DD655C"
                    android:textSize="16sp"
                    />

            </LinearLayout>





            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fee : BDT "
                    android:textStyle="bold"
                    android:textSize="16sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/feeCardTvId"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="16sp"
                    />

            </LinearLayout>


        </LinearLayout>




    </LinearLayout>


</androidx.cardview.widget.CardView>