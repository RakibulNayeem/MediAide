<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="1dp"
    android:padding="10dp">


<LinearLayout
    android:padding="7dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginLeft="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/blood_group_title"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bloodGroupCardTvId"
            android:text="A+"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="15sp"
            />

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:layout_marginLeft="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_weight="1.80"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donated : "
                    android:textColor="#047065"
                    android:textStyle="normal"
                    android:textSize="15sp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/donatedCardTvId"
                    android:text="10+"
                    android:textColor="#047065"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Donation : "
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lastDDCardTvId"
                    android:text=""
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="-8dp"
            android:layout_weight="0.20"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <!--call button-->
            <ImageView
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_call_icon"
                android:id="@+id/callDonorBtnId"
                />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Availability : "
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="15sp"
            />

        <TextView
            android:layout_marginRight="4dp"
            android:paddingRight="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/availabilityCardTvId"
            android:text="Available"
            android:textColor="@color/deep_green"
            android:textStyle="bold"
            android:textSize="15sp"
            android:gravity="end"
            />

    </LinearLayout>




    <LinearLayout
        android:layout_marginTop="-2dp"
       android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_location_deep_green"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addressCardTvId"
            android:text="kajla, RUET, Rajshahi"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="15sp"
            />

    </LinearLayout>



</LinearLayout>


</androidx.cardview.widget.CardView>