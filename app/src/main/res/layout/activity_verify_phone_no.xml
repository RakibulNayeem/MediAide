<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".SignUpLogIn.VerifyPhoneNo">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="270px"
            android:layout_height="270px"
            android:src="@drawable/receive_mail"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Verify Phone Number"
            android:textStyle="bold"
            android:id="@+id/textView"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_marginBottom="50dp"
            android:background="#DDDCDC"
            android:layout_width="match_parent"
            android:layout_height="2dp">

        </LinearLayout>

        <EditText
            android:layout_margin="15dp"
            android:id="@+id/otpEtId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Enter code"
            android:background="#E3E3E3"
            android:inputType="phone"
            android:padding="10dp"
            />

        <Button
            android:layout_margin="10dp"
            android:id="@+id/verifyOTPBtnId"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@drawable/round_bg"
            />

        <ProgressBar
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarVerifyId"
            android:layout_gravity="center"/>
        <TextView
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Didn't receive the OTP? "

            />

        <TextView
            android:id="@+id/countDownTimerTvId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:textAlignment="center"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RESEND OTP"
            android:cursorVisible="false"
            android:textStyle="bold"
            android:textColor="#9e9a99"
            android:id="@+id/resendOtpId"
            />



    </LinearLayout>




</LinearLayout>