<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:layout_marginBottom="1dp">


    <LinearLayout
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nameCardTvId"
                android:text="Name"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:text="Location : "
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="15sp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addressCardTvId"
                android:text=""
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="15sp"
                />

        </LinearLayout>


        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--location and contact-->

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1.80"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:text="Zilla : "
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:textSize="15sp"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/zillaCardTvId"
                        android:text=""
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:textColor="@color/black"
                        android:text="Open : "
                        android:textStyle="normal"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/openCardTvId"
                        android:text=""
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:textColor="@color/black"
                        android:text="Contact : "
                        android:textStyle="normal"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/phoneNumberCardTvId"
                        android:text=""
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        />

                </LinearLayout>


            </LinearLayout>

            <!--call button-->
            <ImageView
                android:layout_margin="2dp"
                android:layout_weight="0.20"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_height="45dp"
                android:src="@drawable/ic_call_icon"
                android:id="@+id/callAmbulanceBtnId"
                />



        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>