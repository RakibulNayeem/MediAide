<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Ambulances.MyAmbulanceAccount">


    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="#5F458E"
            >

        </LinearLayout>

        <RelativeLayout
            android:layout_marginBottom="15dp"
            android:layout_marginTop="-55dp"
            android:layout_width="100dp"
            android:layout_height="100dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/myAmbulanceProfileImageViewId"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/user_icon"
                app:civ_border_width="2dp"
                app:civ_border_color="#000000"/>


   <!--         <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/myAmbulanceCameraIconIvId"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/ic_photo_camera_black_24dp"
                app:civ_border_color="#000000"
                app:civ_border_width="2dp" />
    -->

        </RelativeLayout>




        <LinearLayout
            android:background="@android:drawable/dialog_holo_light_frame"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ambulanceNameTvId"
                    android:text="Ambulance Name"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="Location : "
                    android:textColor="#000000"
                    android:textStyle="normal"
                    android:textSize="16sp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ambulanceLocationTvId"
                    android:text=""
                    android:textStyle="normal"
                    android:textSize="16sp"
                    />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:textColor="#000000"
                    android:text="Zilla : "
                    android:textStyle="normal"
                    android:textSize="17sp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/zillaTvId"
                    android:text=""
                    android:textStyle="normal"
                    android:textSize="17sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Vehicle No : "
                    android:textColor="#000000"
                    android:textStyle="normal"
                    android:textSize="15sp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vehicleNoTvId"
                    android:text=""
                    android:textStyle="normal"
                    android:textSize="15sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:textColor="#000000"
                    android:text="Contact : "
                    android:textStyle="normal"
                    android:textSize="17sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/phoneNumberTvId"
                    android:text=""
                    android:textStyle="normal"
                    android:textSize="17sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:weightSum="10"
                android:padding="1dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="6.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:textColor="@color/colorPrimary"
                    android:text="Available : "
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />


                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/availableSwitchId"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:padding="2dp"
                    android:layout_marginLeft="1dp"
                    android:textOff="No"
                    android:textOn="Yes"
                    app:showText="true"
                    android:thumb="@drawable/switch_thumb"
                    app:track="@drawable/switch_track"
                    android:layout_height="wrap_content"/>


            </LinearLayout>



        </LinearLayout>


    </LinearLayout>


</LinearLayout>