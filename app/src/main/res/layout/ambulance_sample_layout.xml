<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:layout_marginBottom="1dp"
    android:padding="10dp">


        <LinearLayout
            android:padding="7dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


                <TextView
                    android:layout_marginLeft="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameCardTvId"
                    android:text="name"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    />


            <TextView
                android:layout_marginLeft="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/serviceTypeCardTvId"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="14sp"
                />



            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


        <!--        <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.20"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:src="@drawable/ambulance"
                    />  -->


                <LinearLayout
                    android:layout_weight="1.80"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">



                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/driverNameTitleCardTvId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Driver : "
                            android:textColor="#000000"
                            android:textStyle="normal"
                            android:textSize="17sp"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/driverNameCardTvId"
                            android:text=""
                            android:textColor="#000000"
                            android:textStyle="normal"
                            android:textSize="17sp"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Location : "
                            android:textColor="#000000"
                            android:textStyle="normal"
                            android:textSize="15sp"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/addressCardTvId"
                            android:text=""
                            android:textStyle="normal"
                            android:textSize="15sp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Zilla : "
                            android:textColor="#000000"
                            android:textStyle="normal"
                            android:textSize="15sp"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/zillaCardTvId"
                            android:text=""
                            android:textStyle="normal"
                            android:textSize="15sp"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Vehicle No : "
                            android:textColor="#000000"
                            android:textStyle="normal"
                            android:textSize="15sp"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/vehicleCardTvId"
                            android:text=""
                            android:textStyle="normal"
                            android:textSize="15sp"
                            />

                    </LinearLayout>



                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textColor="#000000"
                            android:text="Contact : "
                            android:textStyle="normal"
                            android:textSize="15sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/phoneNumberCardTvId"
                            android:text=""
                            android:textStyle="normal"
                            android:textSize="15sp"
                            />

                    </LinearLayout>


                </LinearLayout>

                <!--call button-->
                <ImageView
                    android:layout_margin="2dp"
                    android:layout_weight="0.20"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_call_icon"
                    android:id="@+id/callAmbulanceBtnId"
                    />


            </LinearLayout>


        </LinearLayout>


</androidx.cardview.widget.CardView>